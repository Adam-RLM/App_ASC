<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8sp"
    app:cardCornerRadius="8sp"
    android:layout_margin="16sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginVertical="6sp"
        android:orientation="vertical"
        android:background="@color/cardview_shadow_end_color">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:45:33"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"/>

            <TextView
                android:id="@+id/text_view_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:paddingLeft="15sp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"/>

            <TextView
                android:id="@+id/text_view_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:paddingLeft="5sp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"/>

            <TextView
                android:id="@+id/text_view_año"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1996"
                android:paddingLeft="5sp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"/>

            <TextView
                android:id="@+id/text_view_justificacion"
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:paddingLeft="15sp"
                android:text="Hoy no pude llegar, porque ayer me mojé XD."/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>